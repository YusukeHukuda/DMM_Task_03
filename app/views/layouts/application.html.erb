<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-dark bg-dark navbar-light">
      <div class="container-fluid">
        <nav class="nav navbar-nav">
      		<span class="navbar-brand">Bookers</span>
      	</nav>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <ul class="nav navbar-nav navbar-right navbar-brand">
    <% if user_signed_in? %>
      <li>
        <%= link_to " Home", user_path(current_user), class: "glyphicon glyphicon-home" %>
      </li>
      <li class="nav-item">
        <%= link_to " Users", users_path, class: "glyphicon glyphicon-user" %>
      </li>
      <li class="nav-item">
        <%= link_to " Books", books_path, class: "glyphicon glyphicon-book" %>
      </li>
      <li class="nav-item">
        <%= link_to " logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
      </li>

    <% else %>
      <li class="nav-item">
        <%= link_to " Home",root_path %>
      </li>
      <li class="nav-item">
        <%= link_to " About", home_about_path %>
      </li>
      <li class="nav-item">
        <%= link_to " Sign up", new_user_registration_path %>
      </li>
      <li class="nav-item">
      <%= link_to " login", user_session_path %>
      </li>
    <% end %>
    </ul>
    <p class="navbar-text">ようこそ ゲスト さん。</p>
    </nav>
    </div>
  </header>
    <%= yield %>
  </body>
</html>
